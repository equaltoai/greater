# Development Environment Variables
# Copy this file to .env.local and update with your values

# Application
PUBLIC_APP_NAME=Greater
PUBLIC_APP_URL=http://localhost:4321
PUBLIC_APP_DESCRIPTION=A modern Mastodon client

# Default Instance (optional)
PUBLIC_DEFAULT_INSTANCE=mastodon.social

# API Configuration
PUBLIC_API_TIMEOUT=30000
PUBLIC_MAX_UPLOAD_SIZE=8388608

# Feature Flags
PUBLIC_ENABLE_ANALYTICS=false
PUBLIC_ENABLE_PWA=true
PUBLIC_ENABLE_TRANSLATIONS=true

# Cloudflare (Required for deployment)
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token
# Optional: Only needed if you have a custom domain
CLOUDFLARE_ZONE_ID=your-zone-id
DOMAIN=your-domain.com

# Pulumi (Required for infrastructure management)
PULUMI_ACCESS_TOKEN=your-pulumi-access-token

# Sentry (Optional: Error tracking)
SENTRY_DSN=your-sentry-dsn

# Development
DEV_SERVER_PORT=4321
DEV_PREVIEW_PORT=4322