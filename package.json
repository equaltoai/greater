{
  "name": "@greater/client",
  "version": "0.1.0",
  "description": "A modern, high-performance web client for Mastodon-compatible instances",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "analyze": "astro build && npx vite-bundle-visualizer",
    "ci": "npm run format:check && npm run lint && npm run typecheck && npm run test:unit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.5.5",
    "@astrojs/svelte": "^7.1.0",
    "@nanostores/persistent": "^1.0.0",
    "@tailwindcss/vite": "^4.0.0-alpha.30",
    "@types/dompurify": "^3.0.5",
    "astro": "^5.9.4",
    "isomorphic-dompurify": "^2.25.0",
    "nanostores": "^1.0.1",
    "svelte": "^5.34.3",
    "tailwindcss": "^4.1.10",
    "zod": "^3.25.67",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/svelte": "^5.2.8",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-svelte": "^3.9.2",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greater-social/greater.git"
  },
  "keywords": [
    "mastodon",
    "activitypub",
    "fediverse",
    "social",
    "client",
    "astro",
    "svelte",
    "cloudflare"
  ],
  "author": "Greater Social Contributors",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/greater-social/greater/issues"
  },
  "homepage": "https://github.com/greater-social/greater#readme"
}
