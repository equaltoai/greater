---
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/core/Header.astro';
import AuthGuard from '@/components/islands/svelte/AuthGuard.svelte';
import OfflineIndicator from '@/components/islands/svelte/OfflineIndicator.svelte';

export interface Props {
  title: string;
  description?: string;
  protected?: boolean;
}

const { title, description, protected: isProtected = true } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <OfflineIndicator client:idle />
  {isProtected ? (
    <AuthGuard client:load>
      <div class="min-h-screen bg-background">
        <Header />
        
        <div class="mx-auto max-w-7xl grid grid-cols-1 lg:grid-cols-[240px_1fr_320px] gap-4 px-4 pt-16 pb-20 lg:pb-0">
          <nav class="hidden lg:block sticky top-20 h-fit">
            <!-- Navigation placeholder -->
          </nav>
          
          <main class="min-h-screen w-full max-w-2xl mx-auto lg:mx-0 flex flex-col">
            <slot />
          </main>
          
          <aside class="hidden xl:block sticky top-20 h-fit">
            <!-- Trending, suggestions, etc. -->
            <slot name="aside" />
          </aside>
        </div>
      </div>
    </AuthGuard>
  ) : (
    <div class="min-h-screen bg-background">
      <Header />
      <main class="min-h-screen w-full max-w-4xl mx-auto px-4 pt-16">
        <slot />
      </main>
    </div>
  )}
</BaseLayout>

