---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" noIndex={true}>
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center max-w-md">
      <h1 class="text-8xl font-bold text-primary mb-4">404</h1>
      <h2 class="text-2xl font-semibold text-text mb-2">Page Not Found</h2>
      <p class="text-text-muted mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex gap-4 justify-center">
        <a href="/home" class="btn btn-primary">Go to Home</a>
        <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
      </div>
    </div>
  </div>
</BaseLayout>