---
import ProtectedRoute from '../components/core/ProtectedRoute.astro';
import MainLayout from '../layouts/MainLayout.astro';
import ComposeBox from '../components/islands/svelte/ComposeBox.svelte';

const title = 'Compose - Greater';
const description = 'Create a new post';
---

<ProtectedRoute>
  <MainLayout title={title} description={description}>
    <div class="max-w-2xl mx-auto">
      <header class="border-b border-gray-200 dark:border-gray-800 px-4 py-4">
        <h1 class="text-xl font-semibold">Compose</h1>
      </header>
      
      <ComposeBox client:load />
    </div>
  </MainLayout>
</ProtectedRoute>