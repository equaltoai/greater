---
import MainLayout from '@/layouts/MainLayout.astro';
import VirtualizedTimeline from '@/components/islands/svelte/VirtualizedTimeline.svelte';

// Federated timeline - all known public posts
---

<MainLayout title="Federated Timeline" description="Public posts from the fediverse">
  <div class="sticky top-[4rem] z-40 bg-background/80 backdrop-blur-md border-b border-border px-4 py-3">
    <h1 class="text-xl font-bold text-text">Federated</h1>
    <p class="text-sm text-text-muted">Public posts from known instances</p>
  </div>
  
  <div class="flex-1 h-full">
    <VirtualizedTimeline type="federated" client:load />
  </div>
</MainLayout>