---
import TimelineLayout from '@/layouts/TimelineLayout.astro';
import Timeline from '@/components/islands/svelte/Timeline.svelte';
import ComposeBox from '@/components/islands/svelte/ComposeBox.svelte';

// Home timeline - authenticated user's timeline
---

<TimelineLayout title="Home" description="Your home timeline">
  <div class="sticky top-[4rem] z-40 bg-background/80 backdrop-blur-md border-b border-border px-4 py-3">
    <h1 class="text-xl font-bold text-text">Home</h1>
    <p class="text-sm text-text-muted">Your timeline</p>
  </div>
  
  <div class="border-b border-border">
    <ComposeBox client:load />
  </div>
  
  <div class="flex-1 h-full">
    <Timeline type="home" client:load />
  </div>
</TimelineLayout>