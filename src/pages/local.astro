---
import MainLayout from '@/layouts/MainLayout.astro';
import VirtualizedTimeline from '@/components/islands/svelte/VirtualizedTimeline.svelte';
import InstanceInfo from '@/components/islands/svelte/InstanceInfo.svelte';

// Local timeline - posts from this instance only
---

<MainLayout title="Local Timeline" description="Posts from your local instance">
  <div class="sticky top-[4rem] z-40 bg-background/80 backdrop-blur-md border-b border-border px-4 py-3">
    <h1 class="text-xl font-bold text-text">Local</h1>
    <p class="text-sm text-text-muted">Posts from this instance</p>
  </div>
  
  <div class="flex-1 h-full">
    <VirtualizedTimeline type="local" client:load />
  </div>
  
  <div slot="aside">
    <InstanceInfo client:idle />
  </div>
</MainLayout>