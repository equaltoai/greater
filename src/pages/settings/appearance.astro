---
import SettingsLayout from '../../layouts/SettingsLayout.astro';
import SettingsNav from '../../components/islands/svelte/SettingsNav.svelte';
import ThemeSettings from '../../components/islands/svelte/ThemeSettings.svelte';

const isAuthenticated = Astro.cookies.get('auth_session')?.value;

if (!isAuthenticated) {
  return Astro.redirect('/auth/login');
}
---

<SettingsLayout title="Appearance Settings">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm">
      <div class="border-b border-gray-200 dark:border-gray-700">
        <SettingsNav client:load current="appearance" />
      </div>
      
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-6">Appearance</h2>
        
        <ThemeSettings client:load />
        
        <!-- Live Preview -->
        <div class="mt-8 border-t border-gray-200 dark:border-gray-700 pt-8">
          <h3 class="text-lg font-semibold mb-4">Live Preview</h3>
          
          <div class="space-y-4">
            <!-- Sample Status -->
            <div class="bg-surface p-4 rounded-lg border border-border">
              <div class="flex items-start space-x-3">
                <div class="w-12 h-12 rounded-full bg-primary"></div>
                <div class="flex-1">
                  <div class="flex items-center space-x-2">
                    <span class="font-semibold text-text">Sample User</span>
                    <span class="text-text-muted">@sample</span>
                  </div>
                  <p class="mt-2 text-text">This is a sample post to preview your theme colors. The theme system supports beautiful color harmonics!</p>
                  <div class="mt-3 flex items-center space-x-4">
                    <button class="text-text-muted hover:text-text">Reply</button>
                    <button class="text-boost hover:text-text">Boost</button>
                    <button class="text-favorite hover:text-text">Favorite</button>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Sample Buttons -->
            <div class="flex gap-3">
              <button class="px-4 py-2 bg-primary text-text-inverse rounded-lg hover:bg-primary-dark">Primary Button</button>
              <button class="px-4 py-2 bg-accent-1 text-text-inverse rounded-lg hover:opacity-90">Accent Button</button>
              <button class="px-4 py-2 border border-border text-text rounded-lg hover:bg-surface-hover">Outline Button</button>
            </div>
            
            <!-- Sample Alerts -->
            <div class="space-y-2">
              <div class="p-3 bg-success/20 text-success rounded-lg">Success message</div>
              <div class="p-3 bg-warning/20 text-warning rounded-lg">Warning message</div>
              <div class="p-3 bg-error/20 text-error rounded-lg">Error message</div>
              <div class="p-3 bg-info/20 text-info rounded-lg">Info message</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</SettingsLayout>