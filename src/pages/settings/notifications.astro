---
import SettingsLayout from '../../layouts/SettingsLayout.astro';
import SettingsNav from '../../components/islands/svelte/SettingsNav.svelte';
import NotificationSettings from '../../components/islands/svelte/NotificationSettings.svelte';
---

<SettingsLayout title="Notification Settings - Greater">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm">
    <div class="border-b border-gray-200 dark:border-gray-700">
      <SettingsNav client:load current="notifications" />
    </div>
    <div class="p-6">
      <h1 class="text-2xl font-bold mb-2">Notification Settings</h1>
      <p class="text-gray-600 dark:text-gray-400 mb-6">
        Manage how you receive notifications and what types you want to see.
      </p>
      
      <NotificationSettings client:load />
    </div>
  </div>
</SettingsLayout>