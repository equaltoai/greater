---
import MainLayout from '../../layouts/MainLayout.astro';
import SettingsNav from '../../components/islands/svelte/SettingsNav.svelte';
import ProfileSettings from '../../components/islands/svelte/ProfileSettings.svelte';

const isAuthenticated = Astro.cookies.get('auth-storage')?.value;

if (!isAuthenticated) {
  return Astro.redirect('/auth/login');
}
---

<MainLayout title="Profile Settings">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white dark:bg-gray-800 rounded-lg">
      <div class="border-b border-gray-200 dark:border-gray-700">
        <SettingsNav client:load current="profile" />
      </div>
      
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-6">Edit Profile</h2>
        
        <ProfileSettings client:load />
      </div>
    </div>
  </div>
</MainLayout>